{
  "name": "nodejs_backend_template",
  "version": "1.0.0",
  "description": "Beautifull backend template, inspired by Nodejs and Typescript",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prod": "npm run tsc && node ./dist/index.js",
    "build": "rm -rf dist; tsc --pretty",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": "Hung Q. Truong",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eslint": "^7.11.0",
    "express": "^4.17.1",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8"
  }
}
